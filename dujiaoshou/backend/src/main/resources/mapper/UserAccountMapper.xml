<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dujiaoshou.mapper.UserAccountMapper">

  <resultMap id="UserMap" type="com.example.dujiaoshou.entity.UserAccount">
    <id property="id" column="id"/>
    <result property="username" column="username"/>
    <result property="passwordHash" column="password_hash"/>
    <result property="role" column="role"/>
  </resultMap>
  <select id="findByUsername" parameterType="string" resultMap="UserMap">
    SELECT * FROM users WHERE username=#{username}
  </select>
  <insert id="insert" parameterType="com.example.dujiaoshou.entity.UserAccount" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO users(username, password_hash, role) VALUES(#{username}, #{passwordHash}, #{role})
  </insert>
</mapper>
