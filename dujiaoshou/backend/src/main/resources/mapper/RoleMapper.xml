<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dujiaoshou.mapper.RoleMapper">

  <resultMap id="RoleMap" type="com.example.dujiaoshou.entity.Role">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="description" column="description"/>
  </resultMap>
  <select id="findByName" resultMap="RoleMap">SELECT * FROM roles WHERE name=#{name}</select>
  <insert id="insert" parameterType="com.example.dujiaoshou.entity.Role" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO roles(name, description) VALUES(#{name}, #{description})
  </insert>
</mapper>
