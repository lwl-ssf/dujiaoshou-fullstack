<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dujiaoshou.mapper.ProductMapper">

  <resultMap id="ProductMap" type="com.example.dujiaoshou.entity.Product">
    <id property="id" column="id"/>
    <result property="name" column="name"/>
    <result property="description" column="description"/>
    <result property="price" column="price"/>
    <result property="cardDelivery" column="card_delivery"/>
    <result property="stock" column="stock"/>
  </resultMap>

  <select id="selectAll" resultMap="ProductMap">SELECT * FROM products ORDER BY id DESC</select>
  <select id="selectById" resultMap="ProductMap">SELECT * FROM products WHERE id = #{id}</select>

  <insert id="insert" parameterType="com.example.dujiaoshou.entity.Product" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO products(name, description, price, card_delivery, stock)
    VALUES(#{name}, #{description}, #{price}, #{cardDelivery}, #{stock})
  </insert>

  <update id="update" parameterType="com.example.dujiaoshou.entity.Product">
    UPDATE products SET
      name=#{name}, description=#{description}, price=#{price},
      card_delivery=#{cardDelivery}, stock=#{stock}
    WHERE id=#{id}
  </update>

  <delete id="delete">DELETE FROM products WHERE id=#{id}</delete>
</mapper>
