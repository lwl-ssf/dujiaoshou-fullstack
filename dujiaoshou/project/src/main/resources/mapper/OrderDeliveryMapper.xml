<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dujiaoshou.mapper.OrderDeliveryMapper">

  <insert id="insert" parameterType="com.example.dujiaoshou.entity.OrderDelivery" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO order_deliveries(order_id, content) VALUES(#{order.id}, #{content})
  </insert>
  <select id="listByOrderId" resultType="com.example.dujiaoshou.entity.OrderDelivery">
    SELECT id, order_id, content FROM order_deliveries WHERE order_id=#{orderId}
  </select>
</mapper>
